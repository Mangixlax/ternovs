{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "vue/types",
      "@nuxt/types",
      "@nuxt/image",
      "@nuxtjs/axios",
      "@types/node",
      "@types/lodash.debounce",
      "@types/object-path",
      "@types/vue-the-mask",
    ]
  },
  "vueCompilerOptions": {
    "target": 2.7,
    "extensions": [
      ".vue"
    ],
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
